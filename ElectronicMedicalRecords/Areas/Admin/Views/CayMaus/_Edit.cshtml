@model ElectronicMedicalRecords.Models.MultiplesModel
@{
    var ListImageNC = Model.CayMau.ImageNuoiCay.Split(',');
    var ListImageDD = Model.CayMau.ImageDinhDanh.Split(',');
}
<button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCayMau" aria-expanded="false" aria-controls="collapseCayMau">
    Xét Nghiệm Cấy Máu
</button>
<div class="collapse" id="collapseCayMau">
    <div class="card card-body">
        <div class="form-horizontal">
            <div class="col-12">
                @Html.HiddenFor(model => model.CayMau.ID)
                @Html.HiddenFor(model => model.CayMau.InformationExamination_ID)
                <div class="form-group has-icon-left">
                    <strong for="ResultNuoiCay">Kết Quả Nuôi Cấy</strong>
                    <div class="position-relative">
                        <textarea name="CayMau.ResultNuoiCay" id="ResultNuoiCay" class="editor">@Model.CayMau.ResultNuoiCay</textarea>
                        @Html.ValidationMessageFor(model => model.CayMau.ResultNuoiCay, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <strong>Hình Ảnh Nuôi Cấy</strong>
            <div class="container" style="margin-top:10px">
                <div class="row">
                    @for (int i = 0; i < ListImageNC.Length - 1; i++)
                    {
                    <div class="col-sm-4 imgUp">
                        <div class="imagePreview" style="background-image: url(@ListImageNC[i])"></div>
                        <label class="btn btn-primary">
                            Upload<input type="file" name="CayMau.ImageNuoiCayFiles" class="uploadFile img" value="@ListImageNC[i] || Upload Photo " style="width: 0px;height: 0px;overflow: hidden;">
                        </label>
                        <input name="CayMau.ExistImageNC" value="@ListImageNC[i]" hidden />
                        @if (i == 0)
                        {
                            <i style="display:none" class="fa fa-times del"></i>
                        }
                        else
                        {
                            <i class="fa fa-times del"></i>
                        }
                    </div>
                    }
                    <input type="text" value="@Model.CayMau.ImageNuoiCay" name="CayMau.ImageNuoiCay" hidden />
                    <i class="fa fa-plus imgAdd"></i>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group has-icon-left">
                    <strong for="ResultDinhDanh">Kết Quả Định Danh</strong>
                    <div class="position-relative">
                        <textarea name="CayMau.ResultDinhDanh" id="ResultDinhDanh" class="editor">@Model.CayMau.ResultDinhDanh</textarea>
                        @Html.ValidationMessageFor(model => model.CayMau.ResultDinhDanh, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <strong>Hình Ảnh Định Danh</strong>
            <div class="container" style="margin-top:10px">
                <div class="row">
                    @for (int i = 0; i < ListImageDD.Length - 1; i++)
                    {
                    <div class="col-sm-4 imgUp">
                        <div class="imagePreview" style="background-image: url(@ListImageDD[i])"></div>
                        <label class="btn btn-primary">
                            Upload<input type="file" class="uploadFile img" name="CayMau.ImageDinhDanhFiles" value="@ListImageDD[i] || Upload Photo" style="width: 0px;height: 0px;overflow: hidden;">
                        </label>
                        <input name="CayMau.ExistImageDD" value="@ListImageDD[i]" hidden />
                        @if (i == 0)
                        {
                            <i style="display:none" class="fa fa-times del"></i>
                        }
                        else
                        {
                            <i class="fa fa-times del"></i>
                        }
                    </div>
                    }
                    <input value="@Model.CayMau.ImageDinhDanh" name="CayMau.ImageDinhDanh" type="text" hidden />
                    <i class="fa fa-plus imgAdd"></i>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group has-icon-left">
                    <label for="NongDo">Nồng Độ</label>
                    <div class="position-relative">
                        <textarea name="CayMau.NongDo" id="NongDo" class="editor">@Model.CayMau.NongDo</textarea>
                        @Html.ValidationMessageFor(model => model.CayMau.NongDo, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
