@model ElectronicMedicalRecords.Models.MultiplesModel
<div class="card-header" style="padding-bottom:0px">
    <h4 class="card-title">Khám Lâm Sàng</h4>
    <hr />
</div>
<div class="card-content">
    <div class="card-body">
        <h5>1. Nội Khoa</h5>
        <div class="row">
            @Html.HiddenFor(model => model.Clinical.ID)
            @Html.HiddenFor(model => model.Clinical.InformationExamination_ID)
            @Html.HiddenFor(model => model.Clinical.User_ID)
            <div class="col-md-4">
                <div class="form-group">
                    <label>Tuần Hoàn</label>
                    @Html.EditorFor(model => model.Clinical.Circles, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Clinical.Circles, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label>Hô Hấp</label>
                    @Html.EditorFor(model => model.Clinical.Respiration, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Clinical.Respiration, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label>Tiêu Hóa</label>
                    @Html.EditorFor(model => model.Clinical.Digestion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Clinical.Digestion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
