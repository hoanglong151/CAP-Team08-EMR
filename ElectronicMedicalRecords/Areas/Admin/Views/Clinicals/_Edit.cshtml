            <div class="col-md-4">
                <div class="form-group">
                    <label>Thần Kinh</label>
                    @Html.EditorFor(model => model.Clinical.Nerve, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Clinical.Nerve, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group">
                    <label>Tâm Thần</label>
                    @Html.EditorFor(model => model.Clinical.Mental, new { htmlAttributes = new { @class = "form-control" } })
