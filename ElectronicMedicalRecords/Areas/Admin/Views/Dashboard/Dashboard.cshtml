                            <h5 class="mb-1">Dean Winchester</h5>
                            <h6 class="text-muted mb-0">imdean</h6>
                        </div>
                    </div>
                    <div class="recent-message d-flex px-4 py-3">
                        <div class="avatar avatar-lg">
                            <img src="@Url.Content("~/Areas/Admin/assets/images/faces/1.jpg")">
                        </div>
                        <div class="name ms-4">
                            <h5 class="mb-1">John Dodol</h5>
                            <h6 class="text-muted mb-0">dodoljohn</h6>
                        </div>
                    </div>
                    <div class="px-4">
                        <button class='btn btn-block btn-xl btn-light-primary font-bold mt-3'>
                            Start
                            Conversation
                        </button>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h4>Visitors Profile</h4>
                </div>
                <div class="card-body">
                    <div id="chart-visitors-profile"></div>
                </div>
            </div>
        </div>
    </section>
</div>

@section scripts{
<script>
    function getData() {
        $.ajax({
            url: "@Url.Action("GetData","Dashboard")",
            type: "GET",
            success: function (res) {
                console.log(res)
                $.each(res.datetime, (index, date) => {
                    optionsProfileVisit.xaxis.categories.unshift(date);
                    barOptions.xaxis.categories.unshift(date);
                })
                $.each(res.numUser, (i, user) => {
                    optionsProfileVisit.series[0].data.unshift(user);
                })

                $.each(res.priceExaminationInfo, (i, priceInfo) => {
                    barOptions.series[0].data.unshift(priceInfo);
                })

                $.each(res.pricePrescriptionDetail, (i, pricePrescription) => {
                    barOptions.series[1].data.unshift(pricePrescription);
                })

                $.each(res.priceTestSubclinical, (i, priceTest) => {
                    barOptions.series[2].data.unshift(priceTest);
                })
            }
        })
    }
    getData();
</script>
}
<script>
    var optionsProfileVisit = {
        annotations: {
            position: 'back'
        },
        dataLabels: {
            enabled: false
        },
        chart: {
            type: 'bar',
            height: 300
        },
        fill: {
            opacity: 1
        },
        plotOptions: {
        },
        series: [{
            name: 'khám',
            data: []
        }],
