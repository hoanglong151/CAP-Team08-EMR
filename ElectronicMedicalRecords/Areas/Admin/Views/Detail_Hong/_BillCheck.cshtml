@model ElectronicMedicalRecords.Models.MultiplesModel

<a class="btn btn-primary" data-bs-toggle="collapse" href="#collapseHong" role="button" aria-expanded="false" aria-controls="collapseExample">
    Họng
</a>

<div class="collapse" id="collapseHong">
    <div class="card-body">
    <h6>Ký tự: <span style="color:red">*</span> nguy hiểm tới tính mạng</h6>
        <table class="table table-striped tableLoadClinical" id="tableHongs" style="width:100%">
            <thead>
                <tr>
                    <th hidden></th>
                    <th hidden></th>
                    <th>Chỉ Định</th>
                    <th>Bệnh về Họng</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Detail_Hongs.Count(); i++)
                {
                    <tr>
                        <td hidden>
                            <input value="@Model.Detail_Hongs[i].InformationExamination_ID" type="text" name="Detail_Hongs[@i].InformationExamination_ID" hidden />
                            <input value="@Model.Detail_Hongs[i].Hong_ID" type="text" name="Detail_Hongs[@i].Hong_ID" hidden />
                        </td>
                        <td hidden>
                            <input value="@Model.Detail_Hongs[i].ID" type="text" name="Detail_Hongs[@i].ID" hidden />
                        </td>
                        <td>
                            <input hidden checked type="checkbox" value="true" class="form-check-input form-check-primary" data-id="@Model.Detail_Hongs[i].Hong_ID" name="Detail_Hongs[@i].Hong_ID">
                            <input disabled checked type="checkbox" value="true" class="form-check-input form-check-primary">
                        </td>
                        <td>
                            @if (Model.Detail_Hongs[i].Hong.Dangerous == true)
                            {
                                <label class="form-check-label">@Model.Detail_Hongs[i].Hong.Name<span style="color:red"> *</span></label>
                            }
                            else
                            {
                                <label class="form-check-label">@Model.Detail_Hongs[i].Hong.Name</label>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

