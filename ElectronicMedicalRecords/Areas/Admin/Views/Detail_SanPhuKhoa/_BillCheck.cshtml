@model ElectronicMedicalRecords.Models.MultiplesModel
<div class="card-body">
    <h6>Ký tự: <span style="color:red">*</span> nguy hiểm tới tính mạng</h6>
    <table class="table table-striped tableLoadClinical" id="tableSanPhuKhoas" style="width:100%">
        <thead>
            <tr>
                <th hidden></th>
                <th hidden></th>
                <th>Chỉ Định</th>
                <th>Bệnh về Sản Phụ Khoa</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Detail_SanPhuKhoas.Count(); i++)
            {
                <tr>
                    <td hidden>
                        <input value="@Model.Detail_SanPhuKhoas[i].InformationExamination_ID" type="text" name="Detail_SanPhuKhoas[@i].InformationExamination_ID" hidden />
                        <input value="@Model.Detail_SanPhuKhoas[i].SanPhuKhoa_ID" type="text" name="Detail_SanPhuKhoas[@i].SanPhuKhoa_ID" hidden />
                    </td>
                    <td hidden>
                        <input value="@Model.Detail_SanPhuKhoas[i].ID" type="text" name="Detail_SanPhuKhoas[@i].ID" hidden />
                    </td>
                    <td>
                        <input hidden checked type="checkbox" value="true" class="form-check-input form-check-primary" data-id="@Model.Detail_SanPhuKhoas[i].SanPhuKhoa_ID" name="Detail_SanPhuKhoas[@i].SanPhuKhoa_ID">
                        <input disabled checked type="checkbox" value="true" class="form-check-input form-check-primary">
                    </td>
                    <td>
                        @if (Model.Detail_SanPhuKhoas[i].SanPhuKhoa.Dangerous == true)
                        {
                            <label class="form-check-label">@Model.Detail_SanPhuKhoas[i].SanPhuKhoa.Name<span style="color:red"> *</span></label>
                        }
                        else
                        {
                            <label class="form-check-label">@Model.Detail_SanPhuKhoas[i].SanPhuKhoa.Name</label>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>




