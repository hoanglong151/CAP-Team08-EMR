@model ElectronicMedicalRecords.Models.MultiplesModel
<h2>Bệnh Tiền Sử</h2>

@*Ông/Bà*@
<div class="card-body">
    <table class="table table-striped" id="tableHistoryDiseases1" style="width:100%">
        <thead>
            <tr>
                <th hidden></th>
                <th>#</th>
                <th>Tiền sử bệnh</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.HistoryDiseases1.Count(); i++)
            {
            <tr>
                <td hidden>
                    @Html.HiddenFor(model => model.HistoryDiseases1[i].ID)
                    @Html.HiddenFor(model => model.HistoryDiseases1[i].Name)
                    @Html.HiddenFor(model => model.HistoryDiseases1[i].Dangerous)
                    <input type="text" name="HistoryDiseases1[@i].LevelFamily" value="Ông/Bà" hidden/>
                </td>
                <td>
                    @*<input type="checkbox" class="form-check-input form-check-primary" name="HistoryDiseases[@i].Selected">*@
                    @Html.CheckBoxFor(model => model.HistoryDiseases1[i].Selected, htmlAttributes: new { @class = "form-check-input form-check-primary" })
                </td>
                <td>
                    @*<input type="checkbox" class="form-check-input form-check-primary" name="HistoryDiseases[@i].Selected">*@
                    @Html.DisplayFor(model => model.HistoryDiseases1[i].Name)
                </td>
            </tr>
            }
        </tbody> 
    </table>
</div>

