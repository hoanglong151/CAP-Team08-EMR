@model ElectronicMedicalRecords.Models.MultiplesModel
<a class="btn btn-primary" data-bs-toggle="collapse" href="#collapseHong" role="button" aria-expanded="false" aria-controls="collapseExample">
    Các bệnh về Họng
</a>

<div class="collapse" id="collapseHong">
    <div class="card-header pd-0px">
        <div class="d-flex justify-content-between align-items-center">
            <h6 style="margin: 1rem 0.5rem">
                Số lượng :
                <span class="countClinicals">0</span>
            </h6>
            <h6>Ký tự: <span style="color:red">*</span> nguy hiểm tới tính mạng</h6>
        </div>
        <!-- button trigger for  Vertically Centered modal -->
        <button style="display:none;margin-left:10px" onclick="loadDetailHongs()" id="DetailClinicalCount" type="button" class="btn btn-outline-primary block"
                data-bs-toggle="modal" data-bs-target="#ModalHong">
            Chi Tiết
        </button>
        <!-- Vertically Centered modal Modal -->
        <div class="modal fade" id="ModalHong" tabindex="-1" role="dialog"
             aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div style="max-width:900px" class="modal-dialog modal-dialog-centered modal-dialog-centered modal-dialog-scrollable"
                 role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalCenterTitle">
                            Danh sách đã chọn
                        </h5>
                        <button type="button" class="close" data-bs-dismiss="modal"
                                aria-label="Close">
                            <i data-feather="x"></i>
                        </button>
                    </div>
                    <div class="modal-body">
                        <table class="table table-striped tableNewChiDinh" id="tableNewHongs" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Bệnh về Họng</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <button id="destroytable" type="button" class="btn btn-primary ml-1"
                                data-bs-dismiss="modal">
                            <i class="bx bx-check d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Tắt</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped tableLoadClinical" id="tableHongs" style="width:100%">
            <thead>
                <tr>
                    <th class="unset-tb" hidden></th>
                    <th class="unset-tb">#</th>
                    <th class="unset-tb">Bệnh về Họng</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Hong.Count(); i++)
                {
                    <tr>
                        <td hidden>
                            <input value="@Model.Hong[i].ID" type="text" name="Hong[@i].ID" hidden />
                        </td>
                        <td>
                            <input type="checkbox" value="false" class="form-check-input form-check-primary updateCountClinicals" data-id="@Model.Hong[i].ID" name="Hong[@i].ChiDinh" id="Hong-@Model.Hong[i].ID">
                        </td>
                        <td>
                            <input value="@Model.Hong[i].Name" type="text" name="Hong[@i].Name" hidden />
                            @Html.HiddenFor(model => model.Hong[i].Dangerous)
                            <label class="form-check-label" for="Hong-@Model.Hong[i].ID">@Model.Hong[i].Name</label>
                            @if (Model.Hong[i].Dangerous == true)
                            {
                                <span style="color:red">*</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

