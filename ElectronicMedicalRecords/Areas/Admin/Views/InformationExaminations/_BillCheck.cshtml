@model ElectronicMedicalRecords.Models.MultiplesModel

<div class="card-header" style="padding-bottom:0px">
    <h4 class="card-title">Thanh Toán</h4>
    <hr />
</div>
<div class="card-content">
    <div class="card-body">
        <div class="row">
            @Html.HiddenFor(model => model.InformationExamination.ID)
            @Html.HiddenFor(model => model.InformationExamination.Patient_ID)
            @Html.HiddenFor(model => model.InformationExamination.DateExamine)
            @Html.HiddenFor(model => model.InformationExamination.User_ID)
            @Html.HiddenFor(model => model.InformationExamination.HeartBeat)
            @Html.HiddenFor(model => model.InformationExamination.Breathing)
            @Html.HiddenFor(model => model.InformationExamination.BloodPressure)
            @Html.HiddenFor(model => model.InformationExamination.Weight)
            @Html.HiddenFor(model => model.InformationExamination.Height)
            @Html.HiddenFor(model => model.InformationExamination.PricePrescription)
            @Html.HiddenFor(model => model.InformationExamination.PriceTest)
            @Html.HiddenFor(model => model.InformationExamination.DateReExamination)
            @Html.HiddenFor(model => model.InformationExamination.ExaminationType)
            <div class="col-md-12 col-12">
                <div class="form-group">
                    @if (Model.InformationExamination.ExaminationType == false)
                    {
                        <div style="margin-bottom:8px">
                            <label for="email-id-column">Loại Khám:</label><span> Bảo Hiểm</span>
                        </div>
                    }
                    else
                    {
                        <div style="margin-bottom:8px">
                            <label for="email-id-column">Loại Khám:</label><span> Dịch Vụ</span>
                        </div>
                    }
                    <label for="email-id-column">Tiền Khám Bệnh</label>
                    <div class="input-group">
                        @if (Model.InformationExamination.User_ID != null)
                        {
                            @Html.EditorFor(model => model.InformationExamination.PriceExamination, new { htmlAttributes = new { @class = "form-control", @type = "number", @readonly = "readonly" } })
                            <span class="input-group-text">VNĐ</span>
                        }
                        else
                        {
                            @Html.EditorFor(model => model.InformationExamination.PriceExamination, new { htmlAttributes = new { @class = "form-control", @type = "number", @Value = "250000", @readonly = "readonly" } })
                            <span class="input-group-text">VNĐ</span>
                        }
                    </div>
                    @Html.ValidationMessageFor(model => model.InformationExamination.PriceExamination, "", new { @class = "text-danger" })
                </div>
            </div>
            <div style="display:flex;justify-content:space-between;align-items:center">
                <div class="col-md-10 col-12">
                    <div class="form-group">
                        <label for="email-id-column">Tiền Quỹ</label>
                        <div class="input-group">
                            @Html.EditorFor(model => model.Patient.MoneyBackup, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                            <span class="input-group-text">VNĐ</span>
                        </div>
                        @Html.ValidationMessageFor(model => model.Patient.MoneyBackup, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-2 col-12" style="display:flex;justify-content:flex-end;align-items:center;margin-top:12px">
                    <a href="#" class="btn btn-primary updateMoneyBackup">Cập Nhật</a>
                </div>
            </div>
            @if (Model.InformationExamination.Detail_CTMau.Count != 0)
            {
                <div class="col-md-12 col-12">
                    <div class="form-group">
                        <label for="email-id-column">Tiền Xét Nghiệm Công Thức Máu</label>
                        <div class="input-group">
                            @Html.EditorFor(model => model.InformationExamination.PriceCTMaus, new { htmlAttributes = new { @class = "form-control", @type = "number", @Value = "100000" } })
                            <span class="input-group-text">VNĐ</span>
                        </div>
                        @Html.ValidationMessageFor(model => model.InformationExamination.PriceCTMaus, "", new { @class = "text-danger" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>

