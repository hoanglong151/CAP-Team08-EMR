@model ElectronicMedicalRecords.Models.MultiplesModel

<div class="card-header" style="padding-bottom:0px">
    <h4 class="card-title">Thông Tin Khám bệnh</h4>
    <hr />
</div>
<div class="card-content">
    <div class="card-body">
        <div class="row">
            @Html.HiddenFor(model => model.InformationExamination.ID)
            @Html.HiddenFor(model => model.InformationExamination.Patient_ID)
            @Html.HiddenFor(model => model.InformationExamination.ResultCTMau)
            @Html.HiddenFor(model => model.InformationExamination.ResultDMau)
            @Html.HiddenFor(model => model.InformationExamination.ResultNhomMau)
            @Html.HiddenFor(model => model.InformationExamination.ResultNuocTieu)
            @Html.HiddenFor(model => model.InformationExamination.ResultMienDich)
            @Html.HiddenFor(model => model.InformationExamination.ResultDichChocDo)
            @Html.HiddenFor(model => model.InformationExamination.ResultViSinh)
            @Html.HiddenFor(model => model.InformationExamination.ResultSHM)
            @Html.HiddenFor(model => model.InformationExamination.New)
            @Html.HiddenFor(model => model.InformationExamination.PriceExamination)
            @Html.HiddenFor(model => model.InformationExamination.PriceCTMaus)
            @Html.HiddenFor(model => model.InformationExamination.PricePrescription)
            @Html.HiddenFor(model => model.InformationExamination.PriceTest)
            @Html.HiddenFor(model => model.InformationExamination.DateReExamination)
            @Html.HiddenFor(model => model.InformationExamination.Specialist)
            @if (Model.Clinical != null)
            {
                @Html.HiddenFor(model => model.Clinical.InformationExamination_ID)
                @Html.HiddenFor(model => model.Clinical.User_ID)
                @Html.HiddenFor(model => model.Clinical.ID)
            }
            <div class="col-md-4 col-12">
                <div class="form-group">
                    <label for="email-id-column">Ngày Đến</label>
                    <input name="InformationExamination.DateExamine" type="datetime" value="@Model.InformationExamination.DateExamine" class="form-control" readonly />
                    @Html.ValidationMessageFor(model => model.InformationExamination.DateExamine, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-4 col-12">
                <div class="form-group">
                    <label for="email-id-column">Ngày Đi</label>
                    <input name="InformationExamination.DateEnd" type="datetime" value="@Model.InformationExamination.DateEnd" class="form-control" readonly />
                    @Html.ValidationMessageFor(model => model.InformationExamination.DateEnd, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-4 col-12">
                <div class="form-group">
                    <label for="email-id-column">Bác Sĩ</label>
                    <input value="@Model.InformationExamination.User_ID" name="InformationExamination.User_ID" hidden />
                    <input value="@ViewBag.UserName" class="form-control" readonly />
                    @Html.ValidationMessageFor(model => model.InformationExamination.User_ID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-4 col-12">
                <div class="form-group">
                    <label for="email-id-column">Nhịp Tim</label>
                    @Html.EditorFor(model => model.InformationExamination.HeartBeat, new { htmlAttributes = new { @class = "form-control", @min = "0" } })
                    @Html.ValidationMessageFor(model => model.InformationExamination.HeartBeat, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-4 col-12">
                <div class="form-group">
                    <label for="email-id-column">Nhịp Thở</label>
                    @Html.EditorFor(model => model.InformationExamination.Breathing, new { htmlAttributes = new { @class = "form-control", @min = "0" } })
                    @Html.ValidationMessageFor(model => model.InformationExamination.Breathing, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-4 col-12">
                <div class="form-group">
                    <label for="email-id-column">Huyết Áp</label>
                    @Html.EditorFor(model => model.InformationExamination.BloodPressure, new { htmlAttributes = new { @class = "form-control", @min = "0" } })
                    @Html.ValidationMessageFor(model => model.InformationExamination.BloodPressure, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-4 col-12">
                <div class="form-group">
                    <label for="email-id-column">Cân Nặng</label>
                    <div class="input-group">
                        @Html.EditorFor(model => model.InformationExamination.Weight, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0" } })
                        <span class="input-group-text">kg</span>
                    </div>
                    @Html.ValidationMessageFor(model => model.InformationExamination.Weight, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-4 col-12">
                <div class="form-group">
                    <label for="email-id-column">Chiều Cao</label>
                    <div class="input-group">
                        @Html.EditorFor(model => model.InformationExamination.Height, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0" } })
                        <span class="input-group-text">cm</span>
                    </div>
                    @Html.ValidationMessageFor(model => model.InformationExamination.Height, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-4 col-12">
                <div class="form-group">
                    <label for="email-id-column">Tình Trạng</label>
                    @Html.DropDownList("InformationExamination.PatientStatus_ID", null, htmlAttributes: new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.InformationExamination.PatientStatus_ID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
</div>
