        function updateCountTests(id, e, value, indextable) {
            if (e.target.checked == true) {
            value.setAttribute("value", true);
            value.setAttribute("checked", true);
                count[indextable]++;
                switch (indextable) {
                    case 0:
                        arrTests.push(id);
