@model IEnumerable<ElectronicMedicalRecords.Models.Patient>
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "__AjaxAntiForgeryForm" }))
{
    @Html.AntiForgeryToken()
}
<header class="mb-3">
    <a href="#" class="burger-btn d-block d-xl-none">
        <i class="bi bi-justify fs-3"></i>
    </a>
</header>

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last pdlLeft">
                <h3>Danh Sách Bệnh Nhân</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Patients")">Trang Chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Bệnh Nhân</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <section class="section">
        <div class="card">
            <div class="card-header">
                Danh Sách Bệnh Nhân
            </div>
            <div class="card-body">
                <a href="@Url.Action("Create", "MultipleModels")" class="btn btn-outline-primary">
                    <i class="m-icon bi bi-plus-circle"></i>
                    Tạo Hồ Sơ
                </a>
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger alert-dismissible show fade">
                        @ViewBag.Error
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                <form action="@Url.Action("SearchPatient","Patients")" method="post">
                    <div class="row mgb-1 mgt-05">
                        <div class="col-md-2">
                            <label>Từ ngày</label>
                            @if (ViewBag.DateStart != null)
                            {
                                <input name="DateStart" type="date" value="@ViewBag.DateStart.ToString("yyyy-MM-dd")" class="form-control" />
                            }
                            else
                            {
                                <input name="DateStart" type="date" class="form-control" />
                            }
                        </div>
                        <div class="col-md-2">
                            <label>Đến ngày</label>
                            @if (ViewBag.DateEnd != null)
                            {
                                <input name="DateEnd" type="date" value="@ViewBag.DateEnd.ToString("yyyy-MM-dd")" class="form-control" />
                            }
                            else
                            {
                                <input name="DateEnd" type="date" class="form-control" />
                            }
                        </div>
                        <div class="col-md-4">
                            <label>Họ Tên</label>
                            @if (ViewBag.NamePatient != null)
                            {
                                <input name="Name" type="text" class="form-control" value="@ViewBag.NamePatient" placeholder="Họ Tên" />
                            }
                            else
                            {
                                <input name="Name" type="text" class="form-control" placeholder="Họ Tên" />
                            }
                        </div>
                        <div class="col-md-3">
                            <label>Mã Bệnh Nhân</label>
                            @if (ViewBag.CodePatient != null)
                            {
                                <input name="Code" type="text" value="@ViewBag.CodePatient" class="form-control" placeholder="Mã Bệnh Nhân" />
                            }
                            else
                            {
                                <input name="Code" type="text" class="form-control" placeholder="Mã Bệnh Nhân" />
                            }
                        </div>
                        <div class="col-md-1 align-self-end">
                            <button type="submit" class="btn-search">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>



                <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#SearchPatient" aria-expanded="false" aria-controls="collapseExample">
                    Tìm kiếm bệnh nhân (Không Sổ)
                </button>
                <div class="collapse" id="SearchPatient">
                    <div class="card card-body">
                        <form action="@Url.Action("SearchPatientNoInfo","Patients")" method="post">
                            <div class="row mgb-1 mgt-05">
                                <div class="col-md-2">
                                    <label>Ngày Sinh</label>
                                    @if (ViewBag.BirthDate != null)
                                    {
                                        <input name="BirthDate" type="date" value="@ViewBag.BirthDate.ToString("yyyy-MM-dd")" class="form-control" />
                                    }
                                    else
                                    {
                                        <input name="BirthDate" type="date" class="form-control" />
                                    }
                                </div>
                                <div class="col-md-4">
                                    <label>Địa Chỉ</label>
                                    @if (ViewBag.Address != null)
                                    {
                                        <input name="Address" type="text" class="form-control" value="@ViewBag.Address" placeholder="Địa Chỉ" />
                                    }
                                    else
                                    {
                                        <input name="Address" type="text" class="form-control" placeholder="Địa Chỉ" />
                                    }
                                </div>
                                <div class="col-md-3">
                                    <label>Họ Tên</label>
                                    @if (ViewBag.NamePatient != null)
                                    {
                                        <input name="Name" type="text" class="form-control" value="@ViewBag.NamePatient" placeholder="Họ Tên" />
                                    }
                                    else
                                    {
                                        <input name="Name" type="text" class="form-control" placeholder="Họ Tên" />
                                    }
                                </div>
                                <div class="col-md-2">
                                    <label>Giới Tính</label>
                                    @*@Html.DropDownList("genders", (IEnumerable<SelectListItem>) ViewBag.Gender, new { @class = "form-control" })*@
                                    <select name="genders" id="genders" class="form-control">
                                        @switch (ViewBag.gender)
                                        {
                                            case 1:
                                                <option value="1" selected>Nam</option>
                                                <option value="2">Nữ</option>
                                                <option value="3">Khác</option>
                                                break;
                                            case 2:
                                                <option value="1">Nam</option>
                                                <option value="2" selected>Nữ</option>
                                                <option value="3">Khác</option>
                                                break;
                                            case 3:
                                                <option value="1">Nam</option>
                                                <option value="2">Nữ</option>
                                                <option value="3" selected>Khác</option>
                                                break;
                                            default:
                                                <option value="1" selected>Nam</option>
                                                <option value="2">Nữ</option>
                                                <option value="3">Khác</option>
                                                break;
                                        }
                                    </select>
                                </div>
                                <div class="col-md-1 align-self-end">
                                    <button type="submit" class="btn-search">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>



                <table class="table table-striped" id="tableLoadPatient" style="width:100%">
                    <thead>
                        <tr>
                            <th>Mã Bệnh Nhân</th>
                            <th>Họ Tên</th>
                            <th>Năm Sinh</th>
                            <th>Địa Chỉ</th>
                            <th>Giới Tính</th>
                            <th style="width:170px">Chức Năng</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>

    </section>
</div>

@section scripts{
    <script type="text/javascript">
    function getPatient() {
        $('#tableLoadPatient').DataTable({
        "order": [],
        "ajax": {
            "url": "@Url.Action("GetData", "Patients")",
            "type": "GET",
            "datatype": "json",
        },
        "columns": [
            {
                "data": "MaBN",
            },
            {
                "data": "Name",
            },
            {
                "data": "BirthDate",
            },
            {
                "data": "Address",
            },
            {
                "data": "Gender",
            },
            {
                "className": "w85",
                "data": null,
                "render": function (data, type, row) {
                    var hrefCreateOldPatient = '@Url.Action("CreateOldPatient", "MultipleModels")/' + data.ID;
                    var hrefEditPatient = '@Url.Action("Edit","MultipleModels")/' + data.ID;
                    var hrefDetailPatient = '@Url.Action("Details","InformationExaminations")/' + data.ID;
                    var hrefConfirmBill = '@Url.Action("BillExamination", "MultipleModels")/' + data.ID;
                    var button = "<a class='btn btnHover print' style='margin:0 2px;' href='" + hrefConfirmBill + "'><i class='fas fa-print'></i></a><button class='btn btnHover plus' style='margin:0 2px;' onclick='createOldPatient(" + data.ID + ")' onclick='createOldPatient(" + data.ID + ")'><i class='fas fa-plus'></i></button><a class='btn btnHover edit' style='margin:0 2px;' href='" + hrefEditPatient + "'><i class='fas fa-user-edit'></i></a><a class='btn btnHover info' style='margin:0 2px;' href='" + hrefDetailPatient + "'><i class='fas fa-info'></i></a><button class='btn btnHover trash' style='margin:0 2px;' onclick='deletePatient(" + data.ID + ")'><i class='fas fa-trash'></i></button>";
                    return button;
                },
                "targets": 0,
                "orderable": false,
            }
        ],
        "language": {
            "emptyTable": "No data available",
            "oPaginate": {
                sNext: '<i class="fa fa-chevron-right"></i>',
                sPrevious: '<i class="fa fa-chevron-left"></i>',
            },
            "info": "Hiển thị _START_/_END_ trên tổng _TOTAL_",
            "lengthMenu": "Hiển thị _MENU_ người",
            "search": "Tìm kiếm:",
        },
        searching: false,
            "fnRowCallback": function (nRow, aData, iDisplayIndex) {
            if (iDisplayIndex == 0) {
            $.ajax({
                type: "GET",
                url: "@Url.Action("getPatientDangerous", "InformationExaminations")",
                success: function (res) {
                console.log("OK", res)
                    $.each(res.data, function (index, value) {
                        var td = $(`td:contains('${value}')`);
                        td.attr("style","color:red;font-weight:600")
                    })
                }
            })
        }
        }
    })
}
    var notificationHubYTa = $.connection.notificationHubYTa;

    notificationHubYTa.client.notifyPatient = function (message) {
        if (message && message.toLowerCase() == "added") {
            $('#tableLoadPatient').DataTable().ajax.reload();
        }
    }
    $.connection.hub.start().done(function () {
        getPatient();
        /*console.log("Notification hub started Y Tá");*/
    }).fail((e) => {
        alert(e)
    });
    </script>

    <script>
        function deletePatient(id) {
                var form = $('#__AjaxAntiForgeryForm');
                var token = $('input[name="__RequestVerificationToken"]', form).val();
                Swal.fire({
                title: 'Bạn Muốn Xóa Bệnh Nhân Này?',
                text: "Bạn sẽ không thể xóa nếu bệnh nhân đã có thông tin khám bệnh!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Xác Nhận',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("Delete","MultipleModels")',
                        type: 'POST',
                        data: "id=" + id + "&__RequestVerificationToken=" + token,
                        success: function (res) {
                            if (res.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Thành công!',
                                    text: 'Bạn đã xóa thông tin bệnh nhân thành công.',
                                    confirmButtonText: 'Xác Nhận'
                                }).then(() => {
                                    location.reload();
                                })
                            }
                            else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Thất Bại!',
                                    text: 'Bạn không thể xóa thông tin bệnh nhân này.',
                                    confirmButtonText: 'Xác Nhận'
                                })
                            }
                        }
                    })
                }
            })
        }

        function createOldPatient(id) {
            $.ajax({
                url: "@Url.Action("checkExist","Patients")",
                type: "GET",
                data: { id: id },
                success: (res) => {
                    if (res.success) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Thất Bại!',
                            text: res.responeText,
                            confirmButtonText: 'Xác Nhận',
                        })
                    } else {
                        window.location.href = '@Url.Action("CreateOldPatient", "MultipleModels")/' + id;
                    }
                }
            })
        }
    </script>
}