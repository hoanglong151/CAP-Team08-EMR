@model IEnumerable<ElectronicMedicalRecords.Models.StatisticModel>
@{
    ViewBag.Title = "StatisByDoctorAndCondition";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<header class="mb-3">
    <a href="#" class="burger-btn d-block d-xl-none">
        <i class="bi bi-justify fs-3"></i>
    </a>
</header>

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last pdlLeft">
                <h3>Thống kê</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("StatisByDoctorAndCondition","Statistics")">Trang Chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Thống Kê</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <section class="section">
        <div class="card">
            <div class="card-header">
                Theo Bác Sĩ & Tình Trạng
            </div>
            <div class="card-body">
                <a target="_blank" href="@Url.Action("PrintStatisByDocandCon", "Statistics")" class="btn btn-outline-primary">
                    <i class="m-icon bi bi-plus-circle"></i>
                    In
                </a>
                @using (Html.BeginForm("ExportExcelBSAndTT", "Statistics", FormMethod.Post, new { style = "display:inline-block" }))
                {
                    <button class="btn btn-outline-primary" type="submit">
                        <i class="far fa-file-excel"></i> Export Excel
                    </button>
                }
                <form action="@Url.Action("SearchBSAndTT","Statistics")" method="post">
                    <div class="row mgb-1 mgt-05">
                        <div class="col-md-5">
                            <label>Từ ngày</label>
                            <input name="dateStart" type="date" class="form-control" />
                        </div>
                        <div class="col-md-5">
                            <label>Đến ngày</label>
                            <input name="dateEnd" type="date" class="form-control" />
                        </div>
                        <div class="col-md-2 align-self-end">
                            <button type="submit" class="btn-search">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
                <table class="table table-striped" id="tableStatisBSAndTT" style="width:100%">
                    <thead>
                        <tr>
                            <th>Mã Bác Sĩ</th>
                            <th>Bác Sĩ</th>
                            <th>Tình Trạng</th>
                            <th>Số Lượng Bệnh Nhân</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            var charName = user.usersStatis.AspNetUser.Email.IndexOf(".", 0);
                            var charName1 = user.usersStatis.AspNetUser.Email.IndexOf("@", 0);
                            <tr>
                                <td>@user.usersStatis.AspNetUser.Email.Substring(charName + 1, charName1 - charName - 1)</td>
                                <td>@user.usersStatis.Name</td>
                                <td>@user.patientStatu.Name</td>
                                <td>@user.usersStatis.InformationExaminations.Count</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>

@section scripts{
    <script>
        $('#tableStatisBSAndTT').DataTable({
            "language": {
                "emptyTable": "No data available",
                "oPaginate": {
                    sNext: '<i class="fa fa-chevron-right"></i>',
                    sPrevious: '<i class="fa fa-chevron-left"></i>',
                },
                "info": "Hiển thị _START_/_END_ trên tổng _TOTAL_",
                "lengthMenu": "Hiển thị _MENU_ loại chuẩn đoán",
                "search": "Tìm kiếm:",
            },
        })

        if (window.location.href.indexOf("Admin/Statistics") > -1) {
            $('a[href="/CP24Team08/Admin/Statistics/StatisByDoctorAndCondition"]').parent().parent().addClass("active");
            $('a[href="/CP24Team08/Admin/Statistics/StatisByDoctorAndCondition"]').parent().parent().parent().addClass("active");
        }
        if (window.location.href.indexOf("Admin/Statistics/SearchBSAndTT") > -1) {
            $('a[href="/CP24Team08/Admin/Statistics/StatisByDoctorAndCondition"]').parent().addClass("active");
        }

    </script>
}


