@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        overflow: hidden
    }
    .overlay{
        position:relative;
        top:0;
        bottom:0;
        left:0;
        right:0
    }
    .overlay video {
        width: 100%;
        display: block;
    }
    .overlay:before {
        content: '';
        position: absolute;
        background: rgba(0, 0, 0, 0.2);
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
    }
    footer{
        display:none
    }
</style>

<div class="overlay">
    <video autoplay muted loop>
        <source src="~/Areas/Admin/assets/videos/videoHomePage.mp4" type="video/mp4" />
    </video>
</div>
