@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        overflow: hidden
    }
    .overlay{
        position:relative;
        top:0;
        bottom:0;
        left:0;
        right:0
    }
    .overlay video {
        width: 100%;
        display: block;
    }
    .overlay:before {
        content: '';
        position: absolute;
        background: rgba(0, 0, 0, 0.2);
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
    }
    footer{
        display:none
    }
    .navbar-nav {
        display: none
    }
    .navbar.navbar-expand.navbar-light{
        display: none
    }
    #main{
        padding: 0rem;
    }
</style>

<div class="overlay">
    <video autoplay muted loop style="height:100vh;background-color:#000">
        <source src="@Url.Content("~/Areas/Admin/assets/videos/videoHomePageVL.mp4")" type="video/mp4" />
    </video>
</div>
